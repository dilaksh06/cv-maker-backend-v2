<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= personalInfo.name %> - Elegant Modern CV</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Montserrat", sans-serif;
        font-size: 13px;
        background: #fff;
        color: #2c3e50;
        padding: 40px;
        display: flex;
        max-width: 900px;
        margin: auto;
      }

      .sidebar {
        width: 250px;
        background: #f4f6f8;
        padding: 25px;
        margin-right: 40px;
        border-radius: 10px;
      }

      .main {
        flex: 1;
      }

      h1 {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 5px;
      }

      .title {
        font-size: 14px;
        color: #777;
        margin-bottom: 20px;
      }

      .section-title {
        font-size: 16px;
        font-weight: 600;
        margin-top: 30px;
        margin-bottom: 10px;
        border-bottom: 2px solid #2c3e50;
        padding-bottom: 4px;
      }

      .info-item {
        margin-bottom: 10px;
        font-size: 13px;
      }

      .info-item a {
        text-decoration: none;
        color: #2c3e50;
      }

      .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 10px;
      }

      .tag {
        background: #ecf0f1;
        padding: 4px 8px;
        font-size: 12px;
        border-radius: 5px;
      }

      .section {
        margin-bottom: 30px;
        break-inside: avoid;
        page-break-inside: avoid;
      }

      .block {
        margin-bottom: 20px;
      }

      .block-title {
        font-weight: 600;
      }

      .block-sub {
        font-size: 12px;
        color: #555;
        font-style: italic;
      }

      ul {
        padding-left: 20px;
        margin-top: 5px;
      }

      li {
        margin-bottom: 5px;
      }

      @media print {
        body {
          padding: 20px;
          font-size: 11.5px;
        }

        .sidebar {
          margin-right: 30px;
        }

        .section {
          margin-bottom: 25px;
        }
      }
    </style>
  </head>
  <body>
    <div class="sidebar">
      <h1><%= personalInfo.name %></h1>
      <div class="title">Executive Professional</div>

      <div class="section">
        <div class="section-title">Contact</div>
        <div class="info-item">üìß <%= personalInfo.email %></div>
        <div class="info-item">
          üìû <%= personalInfo.phoneNumbers?.join(' / ') %>
        </div>
        <% if (personalInfo.linkedin) { %>
        <div class="info-item">
          üíº <a href="<%= personalInfo.linkedin %>">LinkedIn</a>
        </div>
        <% } %> <% if (personalInfo.portfolio) { %>
        <div class="info-item">
          üåê <a href="<%= personalInfo.portfolio %>">Portfolio</a>
        </div>
        <% } %> <% if (personalInfo.github) { %>
        <div class="info-item">
          üêô <a href="<%= personalInfo.github %>">GitHub</a>
        </div>
        <% } %>
        <div class="info-item">üìç <%= personalInfo.address %></div>
      </div>

      <div class="section">
        <div class="section-title">Skills</div>
        <div class="tag-list">
          <% hardSkills.forEach(skill => { %>
          <div class="tag"><%= skill %></div>
          <% }) %>
        </div>
      </div>

      <div class="section">
        <div class="section-title">Languages</div>
        <div class="tag-list">
          <% languages.forEach(lang => { %>
          <div class="tag"><%= lang %></div>
          <% }) %>
        </div>
      </div>
    </div>

    <div class="main">
      <% if (aboutMe) { %>
      <div class="section">
        <div class="section-title">Profile</div>
        <div><%= aboutMe %></div>
      </div>
      <% } %> <% if (workExperience && workExperience.length) { %>
      <div class="section">
        <div class="section-title">Experience</div>
        <% workExperience.forEach(job => { %>
        <div class="block">
          <div class="block-title">
            <%= job.jobTitle %> ‚Äì <%= job.supervisor %>
          </div>
          <div class="block-sub">
            <%= job.city %>, <%= job.country %> | <%= job.dateRange %>
          </div>
          <ul>
            <% job.responsibilities.forEach(task => { %>
            <li><%= task %></li>
            <% }) %>
          </ul>
        </div>
        <% }) %>
      </div>
      <% } %> <% if (academicQualifications && academicQualifications.length) {
      %>
      <div class="section">
        <div class="section-title">Education</div>
        <% academicQualifications.forEach(edu => { %>
        <div class="block">
          <div class="block-title">
            <%= edu.degree %> ‚Äì <%= edu.institution %>
          </div>
          <div class="block-sub"><%= edu.dateRange %></div>
          <% if (edu.website) { %>
          <div><a href="<%= edu.website %>">üîó Website</a></div>
          <% } %>
        </div>
        <% }) %>
      </div>
      <% } %> <% if (projects && projects.length) { %>
      <div class="section">
        <div class="section-title">Projects</div>
        <% projects.forEach(proj => { %>
        <div class="block">
          <div class="block-title"><%= proj.title %></div>
          <div class="block-sub"><%= proj.languages?.join(', ') %></div>
          <div><%= proj.description %></div>
          <% if (proj.links?.length) { %>
          <div><a href="<%= proj.links[0] %>">üîó View</a></div>
          <% } %>
        </div>
        <% }) %>
      </div>
      <% } %> <% if (recommendations && recommendations.length) { %>
      <div class="section">
        <div class="section-title">References</div>
        <% recommendations.forEach(ref => { %>
        <div class="block">
          <div class="block-title"><%= ref.name %></div>
          <div class="block-sub">
            <%= ref.profession %> at <%= ref.institute %>
          </div>
          <div>üìû <%= ref.phone %> | ‚úâÔ∏è <%= ref.email %></div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </body>
</html>

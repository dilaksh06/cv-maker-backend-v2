<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= personalInfo.name %> - CV</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Open+Sans:wght@400;600&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Open Sans", sans-serif;
        font-size: 13px;
        color: #333;
        background-color: #fff;
        line-height: 1.6;
        padding: 40px 50px;
        max-width: 900px;
        margin: auto;
      }

      h1,
      h2,
      h3 {
        font-family: "Playfair Display", serif;
        font-weight: 600;
        color: #1a1a1a;
      }

      h1 {
        font-size: 28px;
        margin-bottom: 4px;
      }

      h2 {
        font-size: 16px;
        margin-bottom: 2px;
      }

      .section-title {
        font-size: 17px;
        margin-top: 28px;
        margin-bottom: 10px;
        padding-bottom: 4px;
        border-bottom: 1px solid #aaa;
        text-transform: uppercase;
      }

      .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }

      .col-half {
        flex: 1 1 45%;
      }

      .col-full {
        flex: 1 1 100%;
      }

      .item {
        margin-bottom: 18px;
      }

      .meta {
        font-weight: 600;
        font-size: 14px;
      }

      .sub {
        font-style: italic;
        color: #666;
        font-size: 12px;
      }

      ul {
        padding-left: 20px;
        margin-top: 6px;
      }

      li {
        margin-bottom: 6px;
      }

      .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 6px;
      }

      .tag {
        background: #eaeaea;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 3px;
      }

      .contact {
        margin-bottom: 20px;
      }

      .contact div {
        margin-bottom: 4px;
      }

      .link-icon {
        margin-right: 4px;
        text-decoration: none;
        font-weight: bold;
      }

      @media print {
        body {
          padding: 20px 30px;
          font-size: 12px;
        }

        .section-title {
          margin-top: 20px;
          font-size: 15px;
        }

        .item {
          page-break-inside: avoid;
        }
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header class="contact">
      <h1><%= personalInfo.name %></h1>
      <h2>Curriculum Vitae</h2>
      <div>Email: <%= personalInfo.email %></div>
      <div>Phone: <%= personalInfo.phoneNumbers.join(' / ') %></div>
      <div>Address: <%= personalInfo.address %></div>
      <div>
        <% if (personalInfo.linkedin) { %>
        <a class="link-icon" href="<%= personalInfo.linkedin %>" target="_blank"
          >üíº LinkedIn</a
        >
        <% } %> <% if (personalInfo.portfolio) { %>
        <a
          class="link-icon"
          href="<%= personalInfo.portfolio %>"
          target="_blank"
          >üåê Portfolio</a
        >
        <% } %> <% if (personalInfo.github) { %>
        <a class="link-icon" href="<%= personalInfo.github %>" target="_blank"
          >üêô GitHub</a
        >
        <% } %>
      </div>
    </header>

    <!-- Summary -->
    <section>
      <div class="section-title">Summary</div>
      <div><%= aboutMe %></div>
    </section>

    <!-- Experience -->
    <section>
      <div class="section-title">Experience</div>
      <% workExperience.forEach(exp => { %>
      <div class="item">
        <div class="meta"><%= exp.jobTitle %> ‚Äì <%= exp.supervisor %></div>
        <div class="sub">
          <%= exp.city %>, <%= exp.country %> | <%= exp.dateRange %>
        </div>
        <ul>
          <% exp.responsibilities.forEach(r => { %>
          <li><%= r %></li>
          <% }) %>
        </ul>
      </div>
      <% }) %>
    </section>

    <!-- Education -->
    <section>
      <div class="section-title">Education</div>
      <% academicQualifications.forEach(edu => { %>
      <div class="item">
        <div class="meta"><%= edu.degree %> ‚Äì <%= edu.institution %></div>
        <div class="sub"><%= edu.dateRange %></div>
        <% if (edu.website) { %>
        <a class="link-icon" href="<%= edu.website %>" target="_blank"
          >üîó Institution Site</a
        >
        <% } %>
      </div>
      <% }) %>
    </section>

    <!-- Projects -->
    <% if (projects.length) { %>
    <section>
      <div class="section-title">Projects</div>
      <% projects.forEach(proj => { %>
      <div class="item">
        <div class="meta"><%= proj.title %></div>
        <div><%= proj.description %></div>
        <div class="sub">
          Tech: <%= proj.languages.join(', ') %> <% if (proj.algorithms.length)
          { %> | Methods: <%= proj.algorithms.join(', ') %> <% } %>
        </div>
        <% if (proj.links.length) { %>
        <a class="link-icon" href="<%= proj.links[0] %>" target="_blank"
          >üîó View Project</a
        >
        <% } %>
      </div>
      <% }) %>
    </section>
    <% } %>

    <!-- Publications -->
    <% if (publications.length) { %>
    <section>
      <div class="section-title">Publications</div>
      <% publications.forEach(pub => { %>
      <div class="item">
        <div class="meta"><%= pub.title %> (<%= pub.year %>)</div>
        <div><%= pub.description %></div>
        <% if (pub.link) { %>
        <a class="link-icon" href="<%= pub.link %>" target="_blank">üîó Read</a>
        <% } %>
      </div>
      <% }) %>
    </section>
    <% } %>

    <!-- Languages & Skills -->
    <section class="row">
      <div class="col-half">
        <div class="section-title">Skills</div>
        <div class="tag-list">
          <% hardSkills.forEach(skill => { %>
          <div class="tag"><%= skill %></div>
          <% }) %>
        </div>
      </div>
      <div class="col-half">
        <div class="section-title">Languages</div>
        <div class="tag-list">
          <% languages.forEach(lang => { %>
          <div class="tag"><%= lang %></div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- References -->
    <% if (recommendations.length) { %>
    <section>
      <div class="section-title">References</div>
      <% recommendations.forEach(ref => { %>
      <div class="item">
        <div class="meta"><%= ref.name %></div>
        <div class="sub"><%= ref.profession %>, <%= ref.institute %></div>
        <div>üìû <%= ref.phone %> | ‚úâÔ∏è <%= ref.email %></div>
      </div>
      <% }) %>
    </section>
    <% } %>
  </body>
</html>
